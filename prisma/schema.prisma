generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id
  name     String
  username String
  email    String   @unique
  password String
  role     UserRole @default(VIEWER)
  accesses UserDeviceAccess[]
  createdAt DateTime @default(now())
  
}

enum UserRole {
  ADMIN
  VIEWER
}

model DeviceCctv {
  id          String       @id
  name        String
  url         String
  listRecords ListRecord[]

  accesses   UserDeviceAccess[]
}

model ListRecord {
  id       String     @id
  fileName String
  deviceId String
  device   DeviceCctv @relation(fields: [deviceId], references: [id])
  createdAt DateTime   @default(now())
}

model UserDeviceAccess {
  id       String   @id
  userId   String
  deviceId String
  user     User     @relation(fields: [userId], references: [id])
  device   DeviceCctv @relation(fields: [deviceId], references: [id])

  canView   Boolean @default(false)
  canControl Boolean @default(false)

  createdAt DateTime @default(now())

  @@unique([userId, deviceId])
}